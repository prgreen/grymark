extends layout

block content
  .container
    #headtitle
      h1= title
    #menu
      ul(class='nav nav-pills nav-stacked')
        li
          a(href='/') Home
        li
          a(href='/download') Download
        li
          a(href='/register') Register
        li(class='active')
          a(href='/donate') Donate
        li
          a(href='/about') About

    #main
      p Grymark is developed by awesome people on their free time. We gladly accept donations through PayPal, any amount is appreciated. The donations will be used:
      ul
        li To cover the server costs
        li To help deliver new content (graphics, programming)
        li To foster the creation of new games and modes
        li To hire freelance talents
      p Payments will be made to izuviel, our treasurer.
      #donate.
      h4 PayPal
        <br/>
        <br/>

        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="S6SV2HHXN42LU">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donate_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/fr_FR/i/scr/pixel.gif" width="1" height="1">
        </form>
      
      h4 Bitcoin
      img(src='/images/bitcoindonate_small.png', id='bitcoindonate')
      <br/>
      <br/>
      p <strong>Thank you for your support!</strong>
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
  script(src='/javascripts/bitcoindonate.js')